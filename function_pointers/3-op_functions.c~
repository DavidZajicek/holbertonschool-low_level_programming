#include <stdlib.h>
#include "3-calc.h"

/**
 * struct op - Struct op
 *
 * @op: The operator
 * @f: The function associated
 */
int op_add(int a, int b)
{
	return (a + b);
}

/**
 * struct op - Struct op
 *
 * @op: The operator
 * @f: The function associated
 */
int op_sub(int a, int b)
{
	return (a - b);
}

/**
 * struct op - Struct op
 *
 * @op: The operator
 * @f: The function associated
 */
int op_mul(int a, int b)
{
	return (a * b);
}

/**
 * struct op - Struct op
 *
 * @op: The operator
 * @f: The function associated
 */
int op_div(int a, int b)
{
	if (b == 0)
		return (NULL);
	return (a / b);
}

/**
 * struct op - Struct op
 *
 * @op: The operator
 * @f: The function associated
 */
int op_mod(int a, int b)
{
	if (b == 0)
		return (NULL);
	return (a % b);
}
